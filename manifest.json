{
    "manifest_version": 2,
    "name": "多喝热水",
    "version": "0.0.1",
    "description": "妈妈再也不担心我不喝水了!",

    "icons": {
        "16": "./img/logo.png",
        "48": "./img/logo.png",
        "128": "./img/logo.png"
    },
    "permissions": [
        "notifications",
        "webRequestBlocking",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "page": "./background.html"
    },

    "browser_action": {
        "default_icon": "./img/logo.png",
        "default_title": "drinkNow!",
        "default_popup": "./popup.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/content-script.js"],
        "run_at": "document_start"
    }]

}